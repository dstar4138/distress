{application, distressd,
 [
  {description, "A Secure Peer-to-Peer File System Daemon"},
  {vsn, "0.1.0"},
  {registered, [distressd]},
  {applications, [kernel, stdlib]},
  {mod, {distress_app, []}},
  {env, [
        % Override Root Directory for Distress
        %{root_dir, "~/.config/distress"},

        % Override Database location
        %{db_loc, "~/.config/distress/db"}
  ]}
 ]
}.
